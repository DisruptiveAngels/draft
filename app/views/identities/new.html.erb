<% content_for :title, 'Registro' %>
<div class="card card-block card-form col-md-4 p-2">
  <%= form_tag "/auth/identity/register", class:"m-4" do %>
    <%= hidden_field_tag 'authenticity_token', form_authenticity_token %>
    <div class="form-group row">
      <%= label_tag :name, 'Nombre', class: 'col-sm-3 form-control-label p-1' %>
      <div class="col-sm-9 ">
        <%= text_field_tag :name, nil, class:'form-control', placeholder:'Juan Pedro de la Mar' %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag :email, 'Email', class: 'col-sm-3 form-control-label p-1'  %>
      <div class="col-sm-9 ">
        <%= email_field_tag :email, nil, class:'form-control', placeholder:'usuario@email.com' %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag :password, 'Contraseña', class: 'col-sm-3 form-control-label p-1'  %>
      <div class="col-sm-9 ">
        <%= password_field_tag :password, nil, class:'form-control', placeholder:'Mínimo 6 cararacteres' %>
      </div>
    </div>
    <div class="form-group row btn-space">
      <div class="col-sm-10 offset-sm-1">
        <%= submit_tag "Registrar", class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>
