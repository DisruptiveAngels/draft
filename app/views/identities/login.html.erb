<% content_for :title, 'Inicia sessión' %>
<div class="card card-block container d-flex justify-content-center card-form">
  <%= form_tag "/auth/identity/callback" ,class:"m-3" do %>
    <div class="form-group row">
      <%= label_tag :auth_key, 'Email', class: 'col-sm-3 form-control-label p-1' %>
      <div class="col-sm-9 ">
        <%= email_field_tag :auth_key, nil, class:'form-control', placeholder:'usuario@email.com' %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag :password, 'Contraseña', class: 'col-sm-3 form-control-label p-1' %>
      <div class="col-sm-9 ">
        <%= password_field_tag :password, nil, class:'form-control', placeholder:'Mínimo 6 cararacteres' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-1">
        <div class="actions"><%= submit_tag "Login", class:"btn btn-success btn-block" %></div>
      </div>
    </div>
  <% end %>
</div>
